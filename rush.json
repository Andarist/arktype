{
    "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/rush.schema.json",
    "rushVersion": "5.56.0",
    "pnpmVersion": "6.23.2",
    "pnpmOptions": {
        "useWorkspaces": true
    },
    "nodeSupportedVersionRange": ">=16.0.0",
    "suppressNodeLtsWarning": true,
    "ensureConsistentVersions": true,
    "repository": {
        "url": "https://github.com/re-do/redo"
    },
    "projects": [
        {
            "packageName": "@re-do/node",
            "projectFolder": "pkgs/node",
            "shouldPublish": true
        },
        {
            "packageName": "@re-do/utils",
            "projectFolder": "pkgs/utils",
            "cyclicDependencyProjects": ["@re-do/node", "@re-do/assert"],
            "shouldPublish": true
        },
        {
            "packageName": "@re-do/assert",
            "projectFolder": "pkgs/assert",
            "shouldPublish": true
        },
        {
            "packageName": "@re-do/type",
            "projectFolder": "pkgs/type",
            "shouldPublish": true
        },
        {
            "packageName": "@re-do/docs",
            "projectFolder": "pkgs/docs",
            "shouldPublish": false
        }
    ]
}
