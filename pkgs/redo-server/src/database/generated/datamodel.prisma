type BrowserEvent {
  type: String!
  selector: String
  value: String
}

type Session {
  token: String!
  user: User!
}

input SignInInput {
  email: String! @unique
  password: String!
}

input SignUpInput {
  email: String! @unique
  password: String!
  firstName: String!
  lastName: String!
}

type Test {
  name: String!
  tags: [String!]!
  steps: [BrowserEvent!]!
}

type User {
  id: ID! @unique
  email: String! @unique
  password: String!
  roles: [String!]!
  firstName: String!
  lastName: String!
}
